<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ax1Mobile.Views.EmployeesViewPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ListView x:Name="EmployeesListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <!--<TextCell Text="{Binding CostCenterName}"></TextCell> -->
                            <ViewCell>
                                <StackLayout Orientation="Vertical" Padding="10">
                                    <StackLayout Orientation="Horizontal" Padding="5">
                                        <Label Text="{Binding FirstName}" FontSize="Micro"/>
                                        <Label Text="{Binding LastName}" FontSize="Micro"/>
                                        <Label Text="{Binding AnnualPay}" FontSize="Micro"/>
                                        <Label Text="{Binding CostCenter.CostCenterName}" FontSize="Micro"/>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>